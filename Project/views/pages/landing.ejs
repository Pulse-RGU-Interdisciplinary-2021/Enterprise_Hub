<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="./style/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <title>Enterprise & Innovation Hub: Booking</title>
    <!--Script repository, with jQuery and links to javascript files-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="./scripts/browseradapt.js"></script>
</head>


<body>

    <div class="BackgroundImage">
        <!--Image of enterprise space-->
        <img src="./images/LandingPageContent.png" id="HomeContent" />
    </div>

    <div class="navBar">
        <!---Header Bar, where links are overlaid--->
        <img src="./images/EIG_Banner.png" id="navBanner" />
    </div>

    <div class="RGULogo">
        <!--Official RGU Logo-->
        <img src="./images/RGULogo.png" class="RguPic" />
    </div>

    <div class="ProfilePic">
        <!--Login Button/Profile Pic-->
        <img src="./images/ProfilePic.png" class="ProfileImage" />
    </div>

    <div class="LowerBar">
        <!--Lower bar place over lower portion of image, giving the shape
           required for page layout/area for book button to be placed-->
        <img src="./images/BaseBarHomepage.png" id="BaseBar" />
    </div>

    <!--Button to direct verified logged in users to the booking page
        Button opens modal to sign in/register if a user isn't signed in-->

    <button class="show btn"><img src="./images/BookButton.png" id="BookButtonImg" /></button>


    <!-- Login/Register Modal -->
    <div class="modal">

        <!-- Modal content -->
        <div class="modal-box">
            <span class="close-button">&#10006;</span>
            <div class="container">
                <h1>Login</h1>
                <form id="sign_in" action="#" method="post" class="sign_in">
                    <p>
                    <div class="form-heading">
                        <label for="email">Email : </label>
                    </div>
                    <input type="text" placeholder="Enter Email" name="email" required>
                    </p>
                    <p>
                    <div class="form-heading">
                        <label for="psw">Password : </label>
                    </div>
                    <input type="password" placeholder="Enter Password" name="psw" required>
                    </p>
                    <p style="font-size: small; text-align: center;color: red;">
                        <%= message %>
                    </p>
                    <label>
                        <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
                    </label>

                    <div class="clearfix">
                        <button type="button" onclick="document.getElementById('id01').style.display='none'"
                            class="cancelbtn">Cancel</button>
                        <button type="submit" class="login">Login</button>
                    </div>
                </form>
                <hr>
                <h1>Sign Up</h1>
                <p>Please fill in this form to create an account.</p>
                <form id="sign_up" action="login" method="post" class="sign_up">
                    <p>
                    <div class="form-heading">
                        <label for="firstName">First Name :</label>
                    </div>
                    <input type="text" placeholder="Enter First Name" name="firstname" required></p>

                    <p>
                    <div class="form-heading"><label for="surname">
                            Surname : </label></div>
                    <input type="text" placeholder="Enter Surname" name="surname" required></p>


                    <p>
                    <div class="form-heading">
                        <label for="email">Email : </label>
                    </div>
                    <input type="text" placeholder="Enter Email" name="email" required>

                    <p>
                    <div class="form-heading"><label for="telno">
                            Phone Number : </label></div>
                    <input type="text" placeholder="Enter Phone Number" name="telno" required></p>

                    <p>
                    <div class="form-heading"><label for="psw">
                            Password : </label></div>
                    <input type="password" placeholder="Enter Password" name="psw" required></p>

                    <div class="form-heading">
                        <label for="psw-repeat">Confirm Password : </label>
                    </div>
                    <input type="password" placeholder="Confirm Password" name="psw-conform" required></p>


                    <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.
                    </p>

                    <div class="clearfix">
                        <button type="button" onclick="document.getElementById('id01').style.display='none'"
                            class="cancelbtn">Cancel</button>
                        <button type="submit" class="signup">Sign Up</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
    <!--</div>-->

    <script src="./scripts/modal.js"></script>


    <footer id="PageFooter">
        <!--Footer block - sitemap could go here-->
        <a href="#"></a>
    </footer>

</body>

</html>